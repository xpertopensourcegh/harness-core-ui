            "type": "string"
          },
          {
            "in": "query",
            "name": "report",
            "description": "Report type",
            "required": true,
            "type": "string",
            "enum": ["junit"]
          },
          {
            "in": "query",
            "name": "pageSize",
            "description": "Max number of elements in response",
            "required": false,
            "default": 100,
            "type": "integer"
          },
          {
            "in": "query",
            "name": "pageIndex",
            "description": "Index of the page whose responses need to be returned",
            "required": false,
            "default": 0,
            "type": "integer"
          },
          {
            "in": "query",
            "name": "status",
            "description": "Filter by status",
            "required": false,
            "type": "string",
            "enum": ["failed"]
          },
          {
            "in": "query",
            "name": "sort",
            "description": "Attribute to sort on",
            "required": false,
            "type": "string",
